<style>
    .dots {
      pointer-events: none;
      position: fixed;
      top: -220px;
      left: calc(50vw - 700px);
      width: 1300px;
      text-overflow: hidden;
      z-index: 200;
    }
    .dot {
      display: inline-block;
      width:30px;
      height:30px;
      background-color: rgba(250,200,150,0.12);
      border-radius: 50%;
      background-size: 100% 100%;
      -webkit-animation: falling 10s infinite linear;
      -moz-animation: falling 10s infinite linear;
    }
  
    .dot:nth-child(6n+1) {
      background-color: rgba(150,250,200,0.1);
    }
    .dot:nth-child(6n+2) {
      background-color: rgba(150,200,250,0.1);
    }
    .dot:nth-child(6n+3) {
      background-color: rgba(250,150,200,0.05);
    }
    .dot:nth-child(6n+5) {
      background-color: rgba(200,150,200,0.05);
    }
  
    .dot:nth-child(7n+1) {
      width: 50px;
      height: 50px;
    }
    .dot:nth-child(7n+2) {
      width: 35px;
      height: 35px;
    }
    .dot:nth-child(7n+3) {
      width: 40px;
      height: 40px;
    }
    .dot:nth-child(7n+5) {
      width: 25px;
      height: 25px;
    }
    .dot:nth-child(7n+6) {
      width: 45px;
      height: 45px;
    }
  
    .dot:nth-child(5n+1) {
      -webkit-animation-delay: 6.2s;
      -moz-animation-delay: 6.2s;
    }
    .dot:nth-child(5n+2) {
      -webkit-animation-delay: 3.8s;
      -moz-animation-delay: 3.8;
    }
    .dot:nth-child(5n+3) {
      -webkit-animation-delay: 2.5s;
      -moz-animation-delay: 2.5s;
    }
    .dot:nth-child(5n+4) {
      -webkit-animation-delay: 8s;
      -moz-animation-delay: 8s;
    }
    .dot:nth-child(4n+1) {
      -webkit-animation-duration: 12s;
      -moz-animation-duration: 12s;
    }
    .dot:nth-child(4n+2) {
      -webkit-animation-duration: 14s;
      -moz-animation-duration: 14s;
    }
    .dot:nth-child(4n+3) {
      -webkit-animation-duration: 16s;
      -moz-animation-duration: 16s;
    }
  
    @-webkit-keyframes falling {
      0% {
        opacity: 1;
        -webkit-transform: translate(0, 0px);
      }
      75% {
        opacity: 1;
        -webkit-transform: translate(112.5px, 900px);
      }
      100% {
        opacity: 0;
        -webkit-transform: translate(150px, 1200px);
      }
    }
    @-moz-keyframes falling {
      0% {
        opacity: 1;
        -moz-transform: translate(0, 0px);
      }
      75% {
        opacity: 1;
        -moz-transform: translate(112.5px, 900px);
      }
      100% {
        opacity: 0;
        -moz-transform: translate(150px, 1200px);
      }
    }
  </style>