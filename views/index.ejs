<script>
  const dots = document.querySelector(".dots")
  const makedots = (n, i=0) => {
    if (i === n) return
    const element = document.createElement("span")
    element.classList.add("dot")
    dots.append(element)
    return makedots(n, i+1)
  }
  makedots(100)
</script>

